<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide1h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".2"

        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide2h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".4"

        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide3h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        app:layout_constraintGuide_percent="0.6" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide4h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".8"

        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide1v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".25"

        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide2v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".50"

        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide3v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".75"

        />

    <!--<TextView-->
    <!--android:layout_width="0dp"-->
    <!--android:layout_height="wrap_content"-->
    <!--app:layout_constraintEnd_toEndOf="parent"-->
    <!--app:layout_constraintStart_toStartOf="parent"-->
    <!--app:layout_constraintTop_toTopOf="parent" />-->

    <Button
        android:id="@+id/button1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorPrimary"
        android:text="+"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@id/guide1h"
        app:layout_constraintEnd_toStartOf="@id/guide1v"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorPrimary"
        android:text="-"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@id/guide1h"
        app:layout_constraintEnd_toStartOf="@id/guide2v"
        app:layout_constraintStart_toStartOf="@id/guide1v"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorPrimary"
        android:text="*"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@id/guide1h"
        app:layout_constraintEnd_toStartOf="@id/guide3v"
        app:layout_constraintStart_toStartOf="@id/guide2v"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorPrimary"
        android:text="/"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@id/guide1h"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/guide3v"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="/" />

    <Button
        android:id="@+id/button5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorPrimaryDark"
        android:text="1"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@id/guide2h"
        app:layout_constraintEnd_toEndOf="@id/guide1v"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guide1h"
        tools:text="1" />

    <Button
        android:id="@+id/button6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorPrimaryDark"
        android:text="2"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@id/guide2h"
        app:layout_constraintEnd_toStartOf="@id/guide2v"
        app:layout_constraintStart_toStartOf="@id/guide1v"
        app:layout_constraintTop_toBottomOf="@id/guide1h" />

    <Button
        android:id="@+id/button7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorPrimaryDark"
        android:text="3"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@id/guide2h"
        app:layout_constraintEnd_toStartOf="@id/guide3v"
        app:layout_constraintStart_toStartOf="@id/guide2v"
        app:layout_constraintTop_toBottomOf="@id/guide1h" />

    <Button
        android:id="@+id/button8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorPrimaryDark"
        android:text="4"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@id/guide2h"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guide3v"
        app:layout_constraintTop_toBottomOf="@id/guide1h" />

    <Button
        android:id="@+id/button9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorPrimaryDark"
        android:text="5"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@id/guide3h"
        app:layout_constraintEnd_toStartOf="@id/guide1v"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guide2h" />

    <Button
        android:id="@+id/button10"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorPrimaryDark"
        android:text="6"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@id/guide3h"
        app:layout_constraintEnd_toStartOf="@id/guide2v"
        app:layout_constraintStart_toStartOf="@id/guide1v"
        app:layout_constraintTop_toBottomOf="@id/guide2h" />

    <Button
        android:id="@+id/button11"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorPrimaryDark"
        android:text="7"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@id/guide3h"
        app:layout_constraintEnd_toStartOf="@id/guide3v"
        app:layout_constraintStart_toStartOf="@id/guide2v"
        app:layout_constraintTop_toBottomOf="@id/guide2h" />

    <Button
        android:id="@+id/button12"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorPrimaryDark"
        android:text="8"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@id/guide3h"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/guide3v"
        app:layout_constraintTop_toBottomOf="@id/guide2h" />

    <Button
        android:id="@+id/button13"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorPrimaryDark"
        android:text="9"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@id/guide4h"
        app:layout_constraintEnd_toStartOf="@id/guide1v"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/guide3h" />

    <Button
        android:id="@+id/button14"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorPrimaryDark"
        android:text="0"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@id/guide4h"
        app:layout_constraintEnd_toStartOf="@id/guide2v"
        app:layout_constraintStart_toStartOf="@id/guide1v"
        app:layout_constraintTop_toTopOf="@id/guide3h" />

    <Button
        android:id="@+id/button15"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorAccent"
        android:text="C"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@id/guide4h"
        app:layout_constraintEnd_toStartOf="@id/guide3v"
        app:layout_constraintStart_toStartOf="@id/guide2v"
        app:layout_constraintTop_toTopOf="@id/guide3h" />

    <Button
        android:id="@+id/button16"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorAccent"
        android:text="="
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@id/guide4h"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guide3v"
        app:layout_constraintTop_toTopOf="@id/guide3h" />

    <TextView
        android:id="@+id/textview_display"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="63dp"
        android:text=""
        android:textAlignment="viewEnd"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button14" />


</androidx.constraintlayout.widget.ConstraintLayout>